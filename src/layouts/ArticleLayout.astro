---

import BaseLayout from "./BaseLayout.astro";

const { title, date } = Astro.props;
---

<BaseLayout title={title}>
  <article>
    <header>
      <h1>{title}</h1>
      <p>Publicado el {date}</p>
    </header>
    <section>
      <slot /> <!-- Aquí se insertará el contenido del artículo -->
    </section>
  </article>
</BaseLayout>

<style>
  article {
    max-width: 800px;
    margin: auto;
    padding: 20px;
  }
  header {
    margin-bottom: 40px;
  }
</style>
