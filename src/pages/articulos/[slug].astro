---
import ArticleLayout from '../../layouts/ArticleLayout.astro';
import { getCollection } from 'astro:content';

// 1. Genera una nueva ruta para cada entrada de colecciÃ³n
export async function getStaticPaths() {
  const articulosEntries = await getCollection('articulos');
  return articulosEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('es-ES', {
    day: '2-digit',
    month: '2-digit',
    year: '2-digit'
  }).format(new Date(date));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<ArticleLayout title={entry.data.title} date={formatDate(entry.data.pubDate)} imagen={entry.data.image} slug={entry.slug}>
  <Content />
</ArticleLayout>
