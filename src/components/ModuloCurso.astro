---
import type { Modulo } from '../types/cursoTypes';

interface ModuloCursoProps {
  modulo: Modulo;
  className: string; // 'left' o 'right', para estilizar según la clase
  icon: string;
  colorIcon: string;
}

const { modulo, className, icon, colorIcon } = Astro.props as ModuloCursoProps;

const iconPath = '../public/img/icons/modulos'
---

<div class={`modulo ${className}`}>
    <div class="modulo-icon" style={{ backgroundColor: colorIcon }}>
      <img src={`${iconPath}/${icon}`} alt="Icono del Módulo" />
    </div>
    <div class="modulo-info">
        <div class="modulo-numero">{modulo.NUMERO}</div>
        <div class="modulo-texto">
          <div class="modulo-nombre">{modulo.NOMBRE}</div>
          <div class="modulo-descripcion">{modulo.DESCRIPCION}</div>
        </div>
      </div>
  </div>

  <style>
.modulo {
    display: flex;
    align-items: center;
    padding: 10px 0;
    border-radius: 8px;
    margin-bottom: 10px;
    color: var(--color-secundario);
}

.modulo.left {
    display: flex;
    align-items: center;
    border-radius: 8px;
    position: relative;
    overflow: hidden; /* Evita que el contenido sobresalga del borde redondeado */
}

 .modulo-info {
  flex: 1; /* Toma la mitad izquierda del módulo */
  padding: 10px; /* Padding interior para el texto */
  display: flex;
  align-items: center;
}

.modulo-numero {
  font-size: 120px;  /* Tamaño grande para el número */
  font-weight: bold;  /* Hacer el número más prominente */
  margin-right: 20px;  /* Espacio entre el número y el texto */
}

.modulo-texto {
  display: flex;
  flex-direction: column;
  justify-content: center; /* Centra el contenido de texto verticalmente */
}

.modulo-nombre {
  font-size: 18px;  /* Un tamaño mayor para el nombre */
  font-weight: bold;
  margin-bottom: 5px;  /* Espacio entre nombre y descripción */
}

.modulo-descripcion {
  font-size: 14px;  /* Tamaño más pequeño para la descripción */
}

.modulo.left .modulo-icon {
    flex: 0.7;  /* Ocupa la mitad del módulo */
    display: flex;
    justify-content: flex-end;  /* Centra el icono horizontalmente */
    align-items: center;  /* Centra el icono verticalmente */
    border-top-right-radius: 100px;  /* Hace que la curvatura superior derecha sea semicircular */
    border-bottom-right-radius: 100px;  /* Hace que la curvatura inferior derecha sea semicircular */
    padding: 10px;  /* Espacio a la derecha del icono para evitar que toque el borde */
    overflow: hidden;  /* Oculta cualquier desbordamiento, útil si el icono es grande */
    height: 100%;  /* Asegura que el borde redondeado ocupe toda la altura del contenedor */
}

.modulo.left .modulo-info {
    padding-left: 5%;
}

.modulo.left .modulo-texto {
    padding-right: 30%;
}

.modulo-icon img {
  width: 80px; /* Ajusta el tamaño del icono según sea necesario */
  height: 80px;
  background-color: var(--color-secundario);
  border-radius: 50%;  /* Hace el div completamente redondo */
}


</style>