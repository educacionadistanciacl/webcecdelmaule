---
// Importa cualquier otro componente si es necesario
import CecLogo from './CecLogo.astro';


const path_img = '../public/img'

const footerData = {
  links: [
    { name: 'SENCE', url: 'https://sence.gob.cl/' },
    { name: 'Universidad Católica del Maule', url: 'https://portal.ucm.cl/' },
    { name: 'Icontec', url: 'https://www.icontec.org/' }
  ],
  certification: {
    name: 'CERTIFICADO NCH 2728:2015',
    logo: `${path_img}/icontec.svg`,
    code: 'OC - CEN8799'
  }
};

// Aquí aceptamos la prop `borde`
const { borde = false } = Astro.props;
---

<footer class={`footer-container ${borde ? 'con-borde' : ''}`}>
  <div class="links-section">
    <h4>ENLACES DE INTERÉS</h4>
    <ul>
      {footerData.links.map(link => (
        <li><a href={link.url} target="_blank" rel="noopener noreferrer">{link.name}</a></li>
      ))}
    </ul>
    <CecLogo/>
  </div>
  <div class="certification-section">
    <h4>{footerData.certification.name}</h4>
    <img src={footerData.certification.logo} alt="Certificado Logo" />
    <p>{footerData.certification.code}</p>
  </div>
</footer>

<style>
.footer-container {
    display: flex;
    align-items: center; /* Asegura que los contenidos estén alineados verticalmente al centro */
    justify-content: space-between; /* Mantiene el espacio entre las secciones */
    min-height: 250px; /* Ajusta según necesites */
    padding: 0 10%; /* Reduce el padding para acercar los elementos */
    background-color: #062C5B; /* Ajusta al color azul del diseño */
    color: var(--color-secundario);
    font-size: 14px;
    flex-wrap: wrap; /* Evita que los elementos se envuelvan */
}

.con-borde {
    border-top: 20px solid var(--color-tercero); /* Borde amarillo si `borde` es true */
}

.links-section {
    display: flex;
    flex-direction: column;
    align-items: flex-start; /* Solo cambia la alineación del texto en esta sección */
    margin-top: auto; /* Empuja todo el contenido hacia abajo */
    margin-bottom: auto; /* Ajusta la posición vertical para centrarlo */
}

.links-section h4 {
    text-transform: uppercase;
    text-align: left; /* Alinea el texto del título a la izquierda */
    margin-left: 20px;
}

.links-section ul {
    list-style: none;
    padding: 0;
    margin: 0; /* Alinea los enlaces justo debajo del encabezado sin margen extra */

}

.links-section li {
    margin-bottom: 10px;  /* Aumenta el margen entre enlaces */
}

.links-section a {
    color: var(--color-secundario);
    font-size: 10px;
    margin-left: 20px;
}

.certification-section {
    display: flex;
    flex-direction: column;
    align-items: center; /* Centra los elementos horizontalmente en esta sección */
    margin-top: auto; /* Empuja todo el contenido hacia abajo */
    margin-bottom: auto; /* Ajusta la posición vertical para centrarlo */
}

.certification-section img {
    margin: 10px 0;
}

.certification-section p {
    margin: 0;
    font-size: 10px;
}

.CecLogo {
    margin-top: 30px;  /* Aumenta el espacio para bajar el logo */
    align-self: flex-start; /* Alineación a la izquierda dentro de la sección de enlaces */
}

@media (max-width: 450px) {
    .footer-container {
        flex-direction: column; /* Cambia la disposición a vertical */
        align-items: center; /* Centra los elementos horizontalmente */
        padding: 20px; /* Ajusta el padding según sea necesario */
    }

    .links-section, .certification-section {
        align-items: center; /* Asegura que todo esté centrado en la sección */
        width: 100%; /* Asegura que las secciones usen todo el ancho disponible */
        text-align: center; /* Alinea el texto al centro */
        margin: 10px 0; /* Añade un margen vertical para separación */
    }

    .links-section h4, .certification-section h4 {
        text-align: center; /* Centra los títulos */
        margin: 10px 0; /* Añade margen para separar de otros elementos */
    }

    .links-section ul, .certification-section img {
        align-self: center; /* Alinea los elementos al centro de su contenedor */
    }

    .links-section a, .certification-section p {
        text-align: center; /* Alinea el texto de enlaces y párrafos al centro */
    }

    .CecLogo {
        margin-top: 20px; /* Espacio antes del logo si es necesario */
        margin-bottom: 20px; /* Espacio después del logo */
    }
}

</style>