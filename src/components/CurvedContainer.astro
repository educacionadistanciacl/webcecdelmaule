<div class="CurvedContainer">
    <div class="curved-top"></div> <!-- Div para la curva -->
    <div class="content-area">
        <slot></slot> {/* Aquí se renderizará el contenido pasado al componente */}
    </div> <!-- Div para el contenido futuro -->
</div>

<style>
    .CurvedContainer {
    background-color: transparent;
    padding: 0;
    position: relative;
    height: 500px; /* Mantiene la altura general del contenedor */
}

.curved-top {
    position: absolute;
    top: -10px; /* Ajusta la posición más cerca del borde superior para reducir el espacio */
    width: 100%;
    height: 100px; /* Altura ajustada para mayor curvatura */
    background-color: #FCFCFC; /* Color de fondo verde */
    border-bottom-left-radius: 100% 150px; /* Aumenta la curvatura para hacerla más pronunciada */
    border-bottom-right-radius: 100% 150px; /* Igual que el lado izquierdo */
    z-index: 2; /* Asegura que se superponga sobre el content-area */
    box-shadow: 0 20px 0 0 #D99F3F; /* Simula un borde uniforme debajo del área curvada */
}


.content-area {
    position: relative;
    top: 20px; /* Inicio más arriba para permitir una mejor visualización de la curvatura */
    width: 100%;
    height: calc(100% - 20px); /* Ajusta la altura para cubrir menos */
    background-image: linear-gradient(to bottom, #17417D 0%, #448FCD 100%); /* Degradado de azul oscuro a azul claro */
    z-index: 1; /* Establece debajo de curved-top */
    box-shadow: 0px 20px 0 0 #D99F3F; /* Simula un borde inferior usando box-shadow */
}

.content-area::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/public/img/logo.svg');
    background-position: center 35%;
    background-repeat: no-repeat;
    background-size: 100%; /* Ajusta este valor según el tamaño deseado para el logo */
    opacity: 0.05; /* Ajusta la opacidad del logo para hacerlo casi transparente */
    z-index: -1;
}
</style>