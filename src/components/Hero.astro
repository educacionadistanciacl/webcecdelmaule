---
const bannerBg = "/img/banner_cec.webp"   // Imagen de la ciudad
const personaImg = "/img/persona_banner.webp"     // Imagen de la persona
const linkCurso = "/cursos/comunicacion-efectiva"       // Enlace real del curso
---

<section
  class="hero"
  style={`background: linear-gradient(
      to right,
      rgba(0, 50, 100, 0.9) 0%,
      rgba(0, 50, 100, 0.3) 40%,
      rgba(0, 50, 100, 0) 70%
    ), url(${bannerBg}) center center / cover no-repeat;`}
>
  <!-- Texto a la izquierda -->
  <div class="hero-content">
    <p class="discount-text">Capacita a tus colaboradores con 50% de descuento</p>
    <h1 class="title">COMUNICACIÓN EFECTIVA</h1>
    <p class="description">
      La mayoría de los problemas de un equipo se originan por una mala comunicación.
    </p>
    <a href={linkCurso} class="btn-curso">Curso Asincrónico</a>
  </div>

  <!-- Persona a la derecha, un poco más hacia adentro -->
  <div class="hero-persona">
    <img src={personaImg} alt="Persona señalando" />
  </div>
</section>

<style>
.hero {
  /* Ocupa todo el ancho y altura mínima de 450px */
  width: 100%;
  min-height: 450px;

  /* Distribución horizontal: texto a la izq. y persona a la der. */
  display: flex;
  align-items: center;
  justify-content: space-between;

  /* Un poco de padding a la izquierda */
  padding-left: 5%;
  box-sizing: border-box;

  position: relative;
}

/* Texto a la izquierda */
.hero-content {
  color: #fff;
  max-width: 500px;
  z-index: 1; /* Encima del degradado */
}

/* Texto de descuento en blanco y en negritas */
.discount-text {
  color: #ffcc00;
  font-weight: bold;
  font-size: 1.1rem; /* Aumentar el tamaño */
  margin-bottom: 5px;
}

/* Título en amarillo y en negritas */
.title {
  color: #ffcc00;
  font-weight: 900;
  font-size: 2.5rem; /* Aumentar tamaño */
  text-transform: uppercase;
  margin-top: 5px;
  margin-bottom: 5px;
}


/* Descripción en blanco */
.description {
  font-size: 1.2rem;
  color: #fff;
  margin-bottom: 50px; /* Más espacio */
  margin-top: 5px;
}

/* Botón */
.btn-curso {
  background-color: #ff6633;
  color: #fff;
  padding: 5px 20px;
  border-radius: 20px; /* Valor aumentado para más redondeo */
  text-decoration: none;
  margin-top: 50px;
}

.btn-curso:hover {
  background-color: #cc5522;
}

/* Contenedor de la persona a la derecha */
.hero-persona {
  z-index: 1;
  margin-right: 10%; /* Para que no quede pegada al borde derecho */
}

/* Imagen de la persona */
.hero-persona img {
  max-height: 450px; 
  object-fit: cover;
  display: block;
}

/* Responsivo: ocultamos la persona en pantallas pequeñas */
@media (max-width: 768px) {
  .hero {
    flex-direction: column;
    justify-content: center;
    min-height: auto;
    padding: 0 20px 20px; /* 20px de padding en laterales y abajo */
    text-align: center;
  }
  .hero-persona {
    margin-right: 0;
  }
  .hero-persona img {
    display: none;
  }
}
</style>
