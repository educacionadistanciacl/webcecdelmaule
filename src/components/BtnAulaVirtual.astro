---
// hacer importaciones necesarias
// Importa el componente base `Btn`
import Btn from './Btn.astro';

const url_aulavirutal = 'https://aula.cecdelmaule.cl/login/index.php'

const { additionalClasses = '' } = Astro.props;
---

<Btn 
  url={url_aulavirutal}
  text="Acceso Aula Virtual" 
  backgroundColor="var(--color-secundario)" 
  color="#29AAE9" 
  additionalClasses={`buttonAulaVirtual ${additionalClasses}`} 
  fontSize="16px" 
/>

<style>
  @media (max-width: 900px) {
    .buttonAulaVirtual {
      margin: 0; /* Ajusta el margen a 0 en pantallas peque√±as */
    }
  }
</style>